<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.cerner.ccl.testing</groupId>
        <artifactId>ccl-maven-plugin-itests-parent-pom</artifactId>
        <version>1.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>framework-version-matching</artifactId>
    <version>1.0</version>
    <name>Matching Framework Version Test</name>
    <packaging>ccl</packaging>
    <description>A test of the framework version validation that should pass validation</description>
    <build>
        <plugins>
            <plugin>
                <groupId>com.cerner.ccl.testing</groupId>
                <artifactId>ccl-maven-plugin</artifactId>
                <version>${pluginVersion}</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>validate-framework-version</id>
                        <goals>
                            <goal>validate</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <validationRule>
                                <testFrameworkVersion>[1.0,9999.0)</testFrameworkVersion>
                            </validationRule>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>